{
  "manifest_version": 3,
  "name": "GitHub PR Template Inserter",
  "version": "1.0",
  "description": "Insert template into GitHub PR description on edit",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://github.com/*"],
  "action": {
    "default_title": "PRテンプレート挿入拡張",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
